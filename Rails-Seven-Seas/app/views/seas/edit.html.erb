<div class="container">
<%= form_with(model: @sea, local: true) do |f| %>

<p>
   <%= f.label :name %><br>
   <%= f.text_field :name, class: "form-control"%>
 </p>
<p>
   <%= f.label :bio %><br>
   <%= f.text_field :bio, class: "form-control" %>
    </p>
    <p>
   <%= f.label :image_url %><br>
   <%= f.text_field :image_url, class: "form-control" %>
 </p>
<p>
   <%= f.label :temperature %><br>
   <%= f.text_field :temperature, class: "form-control" %>
 </p>
<p>
  <%= f.label :favorite_color %><br>
  <%= f.text_field :favorite_color, class: "form-control" %>
</p>
<p>
  <%= f.label :scariest_creature %><br>
  <%= f.text_field :scariest_creature, class: "form-control" %>
</p>
<p>
  <%= f.label :mood %><br>
  <%= f.text_field :mood, class: "form-control" %>
</p>
<p>
  <%= f.label :has_mermaids %><br>
  <%= f.check_box :has_mermaids, class: "form-control" %>
</p>
<p>
  <%= submit_tag("Submit", class: "form-control btn btn-info") %>
<% end %>
</div>

  <div class="text-center row" style="margin: 1em">
    <div class="col-sm-1">
      <%= link_to 'Back', sea_path, class: "btn btn-info", style: "margin: 0 auto" %>
    </div>
    <div class="col-sm-1">
            <%= link_to 'All Seas', seas_path ,class: "btn btn-info", style: "margin: 0 auto" %>
    </div>
    <div class="col-sm-9">
    </div>
    <div class="col-sm-1">
      <%= link_to 'Delete', sea_path, method: :delete, class: "btn btn-danger", style: "margin: 0 auto" %>
    </div>
  </div>
</div>
